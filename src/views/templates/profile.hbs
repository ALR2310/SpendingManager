<div class="offcanvas-header">
    <h5 class="offcanvas-title text-center w-100 fw-bold" id="offcanvasProfileLabel">
        Hồ sơ
    </h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>

<div class="offcanvas-body">
    {{#if userInfor}}
    {{#each userInfor}}
    <div class="d-flex align-items-center">
        <img src="{{this.avatar}}" class="rounded-circle" style="width: 40px; height: 40px">
        <strong class="fs-5 ms-3">{{this.displayname}}</strong>
    </div>
    {{/each}}
    {{/if}}

    <div class="mt-3 mb-3">
        <input id="oldPassword" type="password" class="form-control" placeholder="Mật khẩu cũ">
    </div>

    <div class="mt-3 mb-3">
        <input id="newPassword" type="password" class="form-control" placeholder="Mật khẩu mới">
    </div>

    <div class="mt-3 mb-3">
        <input id="confirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới">
    </div>

    <div class="d-flex justify-content-center mt-3 mb-3">
        <button id="btnChangePassword" class="btn btn-outline-primary">
            Thay đổi mật khẩu
        </button>
    </div>
</div>

<script src="../../public/js/profile.js"></script>