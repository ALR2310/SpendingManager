{
    "name": "nodejs-spendingmanager",
    "version": "1.0.0",
    "description": "",
    "main": "./src/electronApp.js",
    "scripts": {
        "start": "nodemon src/app.js",
        "wd": "electron .",
        "package": "electron-builder",
        "package-all": "electron-builder -mwl"
    },
    "author": "",
    "license": "ISC",
    "build": {
        "appId": "com.alr2310.spendingmanager",
        "productName": "Spending Manager",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "./public/images/favicon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "./public/images/favicon.icns"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "asar": true
    },
    "dependencies": {
        "axios": "^1.6.5",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.2",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "node-notifier": "^10.0.1",
        "node-schedule": "^2.1.1",
        "nodemailer": "^6.9.7",
        "passport": "^0.6.0",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth20": "^2.0.0",
        "sqlite3": "^5.1.6",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "electron": "^27.1.2",
        "electron-builder": "^24.11.0",
        "electron-reloader": "^1.2.3",
        "nodemon": "^3.0.1"
    }
}