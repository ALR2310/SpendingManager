{
    "name": "spendingmanager",
    "version": "3.0.8",
    "description": "Ứng dụng ghi chú và quản lý chi tiêu cá nhân",
    "main": "./src/electronApp.js",
    "scripts": {
        "start": "nodemon src/app.js",
        "wd": "electron .",
        "watch": "nodemon --exec electron .",
        "package": "electron-builder",
        "package-all": "electron-builder -mwl"
    },
    "author": "ALR2310",
    "license": "ISC",
    "homepage": "https://github.com/ALR2310/SpendingManager#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ALR2310/SpendingManager.git"
    },
    "bugs": {
        "url": "https://github.com/ALR2310/SpendingManager/issues"
    },
    "build": {
        "appId": "com.alr2310.spendingmanager",
        "productName": "Spending Manager",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "./public/images/favicon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "./public/images/favicon.icns"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "asar": true,
        "artifactName": "Spending-Manager-Setup-${version}.${ext}",
        "publish": {
            "provider": "github",
            "owner": "ALR2310",
            "repo": "SpendingManager"
        }
    },
    "dependencies": {
        "axios": "^1.6.5",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.2",
        "electron-updater": "^6.1.8",
        "express": "^4.19.2",
        "express-session": "^1.17.3",
        "follow-redirects": "^1.15.6",
        "googleapis": "^133.0.0",
        "ini": "^4.1.1",
        "lodash": "^4.17.21",
        "node-ipc": "^9.2.1",
        "node-notifier": "^10.0.1",
        "node-schedule": "^2.1.1",
        "nodemailer": "^6.9.11",
        "passport": "^0.6.0",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth20": "^2.0.0",
        "pretty-bytes": "^5.6.0",
        "sqlite3": "^5.1.6",
        "uuid": "^9.0.1",
        "ws": "^8.16.0"
    },
    "devDependencies": {
        "electron": "^27.1.2",
        "electron-builder": "^24.13.3",
        "nodemon": "^3.0.1"
    }
}